<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <AssemblyVersion>3.0.0.0</AssemblyVersion>
        <LangVersion>13</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Jellyfin.Controller" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Data" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Database.Implementations" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Extensions" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Model" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Common" Version="10.11.0" />
        <PackageReference Include="Jellyfin.Naming" Version="10.11.0" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Configuration\configPage.html" />
        <EmbeddedResource Include="Configuration\configPage.html" />
        <None Remove="Web\DeoVRClient.js" />
        <EmbeddedResource Include="Web\DeoVRClient.js" />
        <None Remove="Web\Icon.png" />
        <EmbeddedResource Include="Web\Icon.png" />
    </ItemGroup>
</Project>